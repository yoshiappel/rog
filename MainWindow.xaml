<Window x:Class="rog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rog"
        mc:Ignorable="d"
        Title="ROG" Height="250" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <TextBlock x:Name="NowPlaying" Text="No track loaded" Margin="0,0,0,10" TextAlignment="Center"/>
        <Button Content="Open File" Click="OpenFile_Click" Margin="0,5"/>
        <Button Content="Play" Click="Play_Click" Margin="0,5"/>
        <Button Content="Pause" Click="Pause_Click" Margin="0,5"/>
        <Button Content="Stop" Click="Stop_Click" Margin="0,5"/>
    </StackPanel>
</Window>
