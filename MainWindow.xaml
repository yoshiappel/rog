<Window x:Class="rog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rog"
        mc:Ignorable="d"
        Title="ROG" Height="250" Width="400">
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <TextBlock x:Name="NowPlaying" Text="No track loaded" Margin="0,0,0,10" FontWeight="Bold"/>

        <Slider x:Name="ProgressSlider" Minimum="0" Maximum="100" Width="350" 
                ValueChanged="ProgressSlider_ValueChanged" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="📁" Click="OpenFile_Click" Width="30" Height="30"/>
            <Button x:Name="PlayPauseButton" Content="▶" Width="30" Height="30" Margin="10" Click="PlayPauseButton_Click"/>
            <Button Content="◼" Width="30" Height="30" Click="Stop_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
